<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#FFFAFA"
    >

    <LinearLayout
        android:id="@+id/stats_item_income_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/stats_item_income_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="test"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stats_item_income_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_unit"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stats_item_income_count_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stats_item_income_linear"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/stats_item_income_count_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="test"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stats_item_income_count_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_unit_count"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stats_item_spending_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stats_item_income_count_linear"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/stats_item_spending_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="test"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stats_item_spending_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_unit"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stats_item_spending_count_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stats_item_spending_linear"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/stats_item_spending_count_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="test"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stats_item_spending_count_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_unit_count"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stats_item_sum_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stats_item_spending_count_linear"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/stats_item_sum_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="test"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stats_item_sum_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_unit"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>