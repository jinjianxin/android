<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout 
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        
        <TextView 
            android:id="@+id/task_priority"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/taskPriority"
             android:gravity="center_horizontal"
            />
        
        <TextView 
            android:id="@+id/task_priority_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_horizontal"
            />
        
    </LinearLayout>

    
        <LinearLayout 
        android:id="@+id/layout2"
               android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:layout_weight="1"
        >
        
        <TextView 
            android:id="@+id/task_des"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/taskDes"
             android:gravity="center_horizontal"
            />
        
        <TextView 
            android:id="@+id/task_des_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_horizontal"
            android:singleLine="true"
            />
        
    </LinearLayout>
    
        
                <LinearLayout 
        android:id="@+id/layout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:layout_weight="1"
       
        >
        
        <TextView 
            android:id="@+id/task_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/taskDate"
             android:gravity="center_horizontal"
            />
        
        <TextView 
            android:id="@+id/task_date_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_horizontal"
            />
        
    </LinearLayout>
    
</LinearLayout>