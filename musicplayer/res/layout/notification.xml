<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >
    
    <ImageButton
        android:id="@+id/button1"
        android:layout_width="80dip"
        android:layout_height="match_parent"
        android:background="@drawable/allmusic_128"
        />
    
    </LinearLayout>
    
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            
            <TextView 
                android:id="@+id/music_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/noti_music"
                />
            
            <TextView 
                android:id="@+id/singerName"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/noti_singer"
                />
            
        </LinearLayout> 
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            
            <Button 
                android:id="@+id/prev"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/prev_music_style"
                />
            
                 <Button 
                android:id="@+id/play"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/play_music_style"
                />
                 
                      <Button 
                android:id="@+id/next"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/next_music_style"
                />
            
        </LinearLayout>
        
</LinearLayout>
    
    